                </div>

                <input type="hidden" name="orderid" value="@orderId" />
            </fieldset>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button class="btn btn-primary btn-lg btn-block" type="submit" name="buttonAdd" value="Add Order">Add Order</button>
                </div>
            </div>

        </form>
    </div>
    @RenderPage("~/Shared/_Footer.cshtml")
